<h1>Create a New Figure</h1>

<form method='POST' action='/figures'>
<p>Name <input type='text' name='figure[name]' id='figure_name'></p>

<h3>Titles</h3>
<%@titles.each do |title|%>
    <%=title.name%><input type='checkbox' name='figure[title_ids][]' value='<%=title.id%>' id='title_<%=title.id%>'>
    <br>
<%end%>

<h3>Create New title:</h3>
<input type='text' name='title[name]' id='new_title'>
<br><br>

<h3>Landmarks</h3>
<%@landmarks.each do |landmark|%>
    <%=landmark.name%><input type='checkbox' name='figure[landmark_ids][]' value='<%=landmark.id%>' id='landmark_<%=landmark.id%>'>
    <br>
<%end%>

<h3>Create New Landmark:</h3>
<p>Name: <input type='text' name='landmark[name]' id='new_landmark'> Year: <input type='text' name='landmark[year_completed]'></p>
<input type='submit' value='Create New Figure'>

</form>